	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<OutputPath>..\..\.build\out~\Fuxion.SimpleInjector</OutputPath>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\..\.build\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
